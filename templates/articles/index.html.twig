{% extends 'base.html.twig' %}

{% block title %}Article App!{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-title">Articles</h5>
            {% if articles %}
                <div class="card-body">
                    <table id="articles" class="table table-condensed table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>article title</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for article in articles %}
                                <tr>
                                    <td>{{ article.title }}</td>
                                    <td>
                                        <a href="/article/show/{{ article.id }}" class="btn btn-info btn-sm">show</a>
                                        <a href="/article/edit/{{ article.id }}" class="btn btn-secondary btn-sm">edit</a>
                                        <a href="#" data-id="{{ article.id }}" class="btn btn-danger btn-sm delete-article">delete</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p>No articles to display</p>
            {% endif %}
            
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}
